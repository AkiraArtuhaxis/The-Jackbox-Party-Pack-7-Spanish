DEF EPISODE "GrandmasBirthday"
    SET CHOOSABLE TRUE
    SET EMERGENCY "EmergencyTasks"
    SET NAME "Un demonio para cenar"
    SET DESCRIPTION "Es el <font color='#AF0000'>cumpleaños numero 666 de la abuela Pazuzu</font>, y aunque es un demonio de tres cabezas a quien nadie le gusta, la familia le está armando una fiesta."
    SET SUCCESS_MESSAGE "Estuvimos encantados de escuchar que la fiesta de cumpleaños número 666 de la abuela Pazuzu se realizó sin problemas. Celebrar el cumpleaños de un pariente molesto es una larga tradición humana, muy parecida a los picnics de oficina y a fingir que te gustan los chalecos caseros."
    SET FAILURE_MESSAGE "Ha llegado a nuestra atención que el cumpleaños de la abuela Pazuzu fue un desastre total. Nuestras plantas en su asilo nos dicen que no se calla sobre la terrible experiencia que tuvo. Solo un aviso, no esperen ver ninguno de vuestros nombres en el testamento."

    REM : ------------------------------

    REM : SCORE TARGETS
    INCLUDE "../templates/default/score_target.eds"
    
    REM : TASK SCHEDULE
    INCLUDE "../templates/default/schedule.eds"
    
    REM : MEALS
    INCLUDE "../templates/default/meals.eds"

    REM : ------------------------------
     
    REM : ROUND 1 STORY TASKS
    SCHEDULE TASK "TravelPartySupplies" <1 8:00>
    SCHEDULE TASK "CallFriendGrandma" <1 10:00>
    SCHEDULE TASK "CleanParty" <1 13:00>
         
    REM : ROUND 2 STORY TASKS
    SCHEDULE TASK "TravelGrammaPresent" <2 8:00>
    SCHEDULE TASK "GatherGrandmaBouquet" <2 10:00>
    SCHEDULE TASK "GrandmaHandmadeGift" <2 15:00>
    SCHEDULE TASK "WrapGrandmasGift" <2 18:00>
    
    REM : ROUND 3 STORY TASKS
    SCHEDULE TASK "GatherGrandmaMeal" <3 8:00>
    SCHEDULE TASK "TravelPickupGrandma" <3 11:00>
    SCHEDULE TASK "GrandmaSmallTalk" <3 15:00>
    SCHEDULE TASK "GrandmaBlowCandles" <3 18:00>
        
END


REM : ------------------------------


REM : Get Party Supplies
CLONE DEED "TravelCategory" "TravelGrammaSupplies"
    SET INSTRUCTIONS "Conduce hasta la tienda para comprar artículos para fiestas."
    SET CONTENT_ID "PARTYTOWNSHIP"
END

DEF TASK "TravelPartySupplies"
    SET DURATION <8H>
    SET NAME "Conduce a la tienda para comprar artículos para fiestas."
    SET ASKER_NAME "Ve con alguien mayor para conseguir artículos para la fiesta"
    SET HELPER_NAME "Drive to the store with <ASKER> to get party supplies"
    SET CATEGORY "STORY"
    SET THEME "STORY"
    SET CAPTAIN "MATURE"
    SET PARTICIPANT "YOUNG"
    
    STEP "1" "TravelGrammaSupplies"
    NEXT "1" SUCCESS FAILURE
END

REM : Buy Grandma's Present
